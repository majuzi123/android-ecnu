<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".DietInfoActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/cateenname"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cateenname"
            android:textSize="50dp"
            android:gravity="center"
            ></TextView>

        <ImageView
            android:id="@+id/cateenphoto"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/cateen1"></ImageView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/food1"
                        android:layout_marginLeft="20dp"
                        ></ImageView>
                    <TextView
                        android:id="@+id/food1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="五谷鱼粉"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:onClick="dietInfo"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/photo2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/food2"
                        android:layout_marginLeft="20dp"
                        ></ImageView>
                    <TextView
                        android:id="@+id/food2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="油泼面"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:onClick="dietInfo"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/photo3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/food3"
                        android:layout_marginLeft="20dp"
                        ></ImageView>
                    <TextView
                        android:id="@+id/food3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="牛肉面"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:onClick="dietInfo"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/photo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/food4"
                        android:layout_marginLeft="20dp"
                        ></ImageView>
                    <TextView
                        android:id="@+id/food4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蛋包饭"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:onClick="dietInfo"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>